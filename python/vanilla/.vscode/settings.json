{
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "basic",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/Pipfile.lock": true,
        "**/package-lock.json": true,
        "**/.coverage.*": true
    },
}